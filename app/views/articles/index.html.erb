<h1>
	Articles list
</h1>

<br/>

<%= link_to "Create new", new_article_path %>

<div>
	<% @articles.reverse_each do |article| %>
		<h1>
			<%= link_to "#{article.title}", article_path(article.id)  %>
		</h1>
		<p>
			<%= article.text %>
		</p>
		<hr/>
	<% end %>
</div>

<%= link_to "Back", :back %>